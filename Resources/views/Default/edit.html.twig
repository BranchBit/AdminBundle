{% extends '@BBITAdmin/Default/base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block maincontent %}

    <form method="post" enctype="multipart/form-data">
        {% for child in form.children %}
            {{ form_row(child) }}
        {% endfor %}



    <input type="submit" value="Save" class="btn btn-success">
    {% if 'delete' in admin.routes %}
        <a class="btn btn-danger" href="{{ path('bbit_admin_'~admin.getName~'_delete', {'id': item.id}) }}"><span class="glyphicon glyphicon-trash"></span> Remove {{ admin.getName|capitalize }}</a>
    {% endif %}
    </form>


{% endblock %}